<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="FloofLog.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:FloofLog"
    xmlns:pages="clr-namespace:FloofLog.Pages"
    Title="FloofLog">

    <TabBar>
        <ShellContent
            Title="Dashboard"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />
        <ShellContent
            Title="My Pets"
            ContentTemplate="{DataTemplate pages:ManagePetsPage}"
            Route="ManagePetsPage" />
    </TabBar>

</Shell>
